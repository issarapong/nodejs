# Environment Variables สำหรับ Lab 9

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/nodejs-lab-realtime
MONGODB_TEST_URI=mongodb://localhost:27017/nodejs-lab-realtime-test

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-websocket-lab
JWT_REFRESH_SECRET=your-super-secret-refresh-key-for-websocket
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-for-websocket
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_MAX_AGE=86400000

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,text/plain,application/pdf
UPLOAD_PATH=./uploads

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE_MAX=30
RATE_LIMIT_MESSAGE_WINDOW=60000

# Security
BCRYPT_SALT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Email Configuration (สำหรับ notifications)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Performance Monitoring
PERFORMANCE_MONITORING=true
METRICS_INTERVAL=5000

# Chat Configuration
MAX_MESSAGE_LENGTH=1000
MAX_ROOM_MEMBERS=100
MESSAGE_HISTORY_LIMIT=100

# Notification Configuration
MAX_NOTIFICATIONS_PER_USER=50
NOTIFICATION_RETENTION_DAYS=30

# Dashboard Configuration
DASHBOARD_REFRESH_INTERVAL=1000
MAX_CHART_DATA_POINTS=100

# Development
DEBUG=socket.io:*
ENABLE_CORS=true
TRUST_PROXY=false