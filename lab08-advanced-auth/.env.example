# Database
MONGODB_URI=mongodb://localhost:27017/nodejs-lab-auth

# JWT Secrets
JWT_ACCESS_SECRET=your-super-secret-access-key-here-make-it-long-and-complex-2024
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-make-it-different-2024
ACCESS_TOKEN_EXPIRE=15m
REFRESH_TOKEN_EXPIRE=7d

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Email Service (สำหรับ OTP และ Password Reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# MFA
MFA_ISSUER=NodeJS-Lab
MFA_SERVICE_NAME=Advanced Auth Demo

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=30
MAX_REQUESTS_PER_HOUR=1000

# Session
SESSION_SECRET=your-session-secret-key-here-make-it-secure-2024

# Redis (for session storage and cache)
REDIS_URL=redis://localhost:6379

# Environment
NODE_ENV=development
PORT=3000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001